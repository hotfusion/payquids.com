{
  "name": "gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "ws" : {
    "port" : {
      "main" : "8890"
    },
    "include": [
      "**/*.vue",
      "**/*.less"
    ],
    "ssl" : false,
    "environment": {
      "MONGO_URI": "mongodb://root:example@mongo:27017"
    },
    "docker" : {
      "services" : {
        "mongo" : {
          "image": "mongo:7.0",
          "container_name": "mongo",
          "restart": "unless-stopped",
          "environment":{
            "MONGO_INITDB_ROOT_USERNAME": "root",
            "MONGO_INITDB_ROOT_PASSWORD": "example"
          },
          "ports":["27017:27017"]
        }
      }
    }
  },
  "scripts": {
    "payq:build"   : "sudo node node_modules/@hotfusion/ws/actions/_.build.js --dir=$PWD",
    "payq:run"     : "npm run payq:build && sudo node node_modules/@hotfusion/ws/actions/_.run.js --dir=$PWD/dist",
    "payq:deploy"  : "npm run payq:build && sudo node ./node_modules/@hotfusion/ws/actions/_.deploy.js --dir=$PWD/dist --host=204.12.203.220 --username=administrator --password=!B1mujx22"
  },
  "dependencies": {
    "@hotfusion/ws": "../../ws/engine/dist",
    "stripe" : "^18.5.0",
    "vite": "^7.1.5",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@vitejs/plugin-vue" : "^6.0.1",
    "juice": "^11.0.1",
    "puppeteer" : "^24.20.0",
    "mongodb" : "^6.20.0",
    "@hotfusion/ui": "../../ui/dist",
    "@stripe/stripe-js": "^4.10.0"
  },
  "devDependencies": {
    "gulp": "^5.0.1",
    "through2" : "^4.0.2"
  },
  "private": true
}
